<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".StartScreenActivity"
    android:background="@drawable/glencarrie"
    >

    <!--<ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/sammoqadam"
        android:scaleType="fitXY"
        />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="My Awesome Quiz"
        android:textColor="@color/colorBlack"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/activity_starting_screen_btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Quiz"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".6" />

    <TextView
        android:id="@+id/activity_starting_screen_tv_highScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Highscore: 0"
        android:textColor="@color/colorBlack"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@id/activity_starting_screen_btn_start"
        app:layout_constraintEnd_toEndOf="@id/activity_starting_screen_btn_start"
        app:layout_constraintStart_toStartOf="@id/activity_starting_screen_btn_start"
        />

    <Spinner
        android:id="@+id/activity_starting_screen_spinner_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/activity_starting_screen_btn_start"
        app:layout_constraintEnd_toEndOf="@id/activity_starting_screen_btn_start"
        app:layout_constraintTop_toBottomOf="@id/activity_starting_screen_btn_start"
        android:layout_marginTop="18dp"
        />

    <Spinner
        android:id="@+id/activity_starting_screen_spinner_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/activity_starting_screen_btn_start"
        app:layout_constraintEnd_toEndOf="@id/activity_starting_screen_btn_start"
        app:layout_constraintTop_toBottomOf="@id/activity_starting_screen_spinner_category"
        android:layout_marginTop="18dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>